<div class="row my-3 g-2 p-2 m-0">
    @foreach (var item in Model)
    {
        <div class="col-xxl-2 col-md-3 col-6">
            <div class="card bg-info border-0" style="width: 100%;">
                <img src="@item.HinhAnh" class="card-img-top rounded" alt="Ao thun den">
                <div class="card-body">
                    <h5 class="card-title">@item.TenSanPham</h5>
                    <p class="card-text">Xanh đen</p>
                    <p class="card-text"><strong>@item.Gia</strong></p>
                    <a href="/Product/Detail/@item.MaSanPham" class="btn btn-primary">Mua ngay</a>
                </div>
            </div>
        </div>
    }
</div>
<div class="container d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link text-dark" href="/Product/Index?Search=@ViewBag.Search&Sort=@ViewBag.Sort&Icon=@ViewBag.Icon&page=@pre">Previous</a></li>
            @for (int i = 0; i < ViewBag.NoOfPages; i++)
            {
                <li class="page-item"><a class="page-link text-dark" href="/Product/Index?Search=@ViewBag.Search&Sort=@ViewBag.Sort&Icon=@ViewBag.Icon&page=@(i + 1)">@(i + 1)</a></li>
            }
            <li class="page-item"><a class="page-link text-dark" href="/Product/Index?Search=@ViewBag.Search&Sort=@ViewBag.Sort&Icon=@ViewBag.Icon&page=@next">Next</a></li>
        </ul>
    </nav>
</div>