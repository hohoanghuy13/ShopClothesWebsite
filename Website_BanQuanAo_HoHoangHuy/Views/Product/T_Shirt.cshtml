@model List<Website_BanQuanAo_HoHoangHuy.Models.SanPham>

@{
    ViewBag.Title = "T_Shirt";
}
@{
    int next = ViewBag.Page + 1;
    int pre = ViewBag.Page - 1;
    if (next > ViewBag.NoOfPages)
    {
        next = ViewBag.NoOfPages;
    }
    if (pre < 1)
    {
        pre = 1;
    }
}
<div class="p-4">
    <h2>Áo Thun</h2>
</div>
<div class="row m-0">
    <div class="col-md-3 d-flex">
        <img width="30" height="30" src="https://img.icons8.com/ios/50/filter--v1.png" alt="filter--v1" />
        <h5>Bộ lọc</h5>
    </div>
    <div class="col-md-3">
        <select class="form-select" aria-label="Default select example">
            <option selected>Lọc giá</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-select" aria-label="Default select example">
            <option selected>Kích thước</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-select" aria-label="Default select example">
            <option selected>Chưa biết</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>
</div>
