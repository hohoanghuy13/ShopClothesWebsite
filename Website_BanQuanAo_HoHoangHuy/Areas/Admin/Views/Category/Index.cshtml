
@{
    ViewBag.Title = "Index";
}

<div class="container mx-auto">
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <form class="d-flex" action="/Admin/Category/Index">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search" value="@ViewBag.Search">
                <button type="submit" class="btn btn-outline-success">Search</button>
            </form>
        </div>
    </nav>
    <a href="/Admin/Category/Create/" class="btn btn-primary">Thêm sản phẩm</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Mã loại sản phẩm</th>
                <th>Tên loại sản phẩm</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in ViewBag.LoaiSP)
            {
                <tr>
                    <td>@item.MaLoaiSP</td>
                    <td>@item.TenLoaiSP</td>
                    <td>
                        <a href="/Admin/Category/Edit/@item.MaLoaiSP" class="link">Sửa</a>
                        <a href="/Admin/Category/Delete/@item.MaLoaiSP" class="link">Xóa</a>
                    </td>
                </tr>
            }    
        </tbody>
    </table>
</div>

