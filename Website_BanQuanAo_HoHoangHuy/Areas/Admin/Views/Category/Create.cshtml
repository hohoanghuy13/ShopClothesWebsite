
@{
    ViewBag.Title = "Create";
}
<div class="container mx-auto">
    <h2>Thêm loại sản phẩm mới</h2>
    <form action="/Admin/Category/Create" method="post">
        <div class="row">
            <div class="col-12 mb-3">
                <label for="TenLoaiSP" class="form-label">Tên loại sản phẩm</label>
                <input type="text" id="TenLoaiSP" name="TenLoaiSP" placeholder="Tên loại sản phẩm" class="form-control" />
            </div>
            <div class="col-12 mb-3">
                <button type="submit" class="btn btn-primary">Thêm loại sản phẩm</button>
                <a href="/Admin/Category/Index/" class="btn btn-light">Trở lại trang chủ</a>
            </div>
        </div>
    </form>
</div>

